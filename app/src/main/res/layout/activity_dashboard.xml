<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/DashboardWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, asdf"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/DashboardTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/DashboardDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/DashboardSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/DashboardLeaderboardTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaderboard (Time)"/>

    <Button
        android:id="@+id/DashboardLeaderboardDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaderboard (Distance)"/>

    <Button
        android:id="@+id/DashboardLeaderboardSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leaderboard (Speed)"/>

</LinearLayout>